{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}\n"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log-.ndjson",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "outputTemplate": "{\t\"timestamp\":\"{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}\", \"level\":\"{Level}\", \"severity\":\"{Level:u3}\", \"RequestMethod\":\"{RequestMethod}\", \"RequestPath\":\"{RequestPath}\", \"tracebackId\":\"{EndpointName}\", \"source\":\"{SourceContext}\", \"data\":\"{PropertiesToJson}\", \"message\":\"{@Message:lj}\", \"stackTrace\":\"{@Exception}\"}\n\n",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId", "WithEnvironmentName" ]
  }
}
